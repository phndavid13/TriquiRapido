<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#E3C90F"
    >

    <ImageButton
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnm"
        android:src="@drawable/vs2"
        android:layout_marginBottom="54dp"
        android:onClick="btnManual"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btna"
        android:src="@drawable/vs1"
        android:layout_marginBottom="77dp"
        android:layout_above="@+id/btnm"
        android:layout_alignLeft="@+id/btnm"
        android:layout_alignStart="@+id/btnm"
        android:onClick="btnAndroid" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PLEASE SELECT ONE OPTION"
        android:id="@+id/textView5"
        android:textColor="#EC4E27"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginBottom="39dp"
        android:layout_above="@+id/btna"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/despi" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tic Tac Toe"
        android:id="@+id/textView3"
        android:layout_below="@+id/imageButton"
        android:layout_alignRight="@+id/imageButton"
        android:layout_alignEnd="@+id/imageButton"
        android:textColor="#EC4E27"
        android:textStyle="bold" />
</RelativeLayout>
