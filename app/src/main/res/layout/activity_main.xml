<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFDD04"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:text="Minions"
        android:textColor="#FFf"
        android:typeface="monospace"
        android:id="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textSize="25dp"
        android:textIsSelectable="true" />

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout"
        android:layout_below="@+id/textView3"
        android:layout_alignParentBottom="true">

        <RelativeLayout
        android:layout_width="328dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/emptyboard"
            android:layout_gravity="bottom"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
        <ImageButton
            android:background="@null"
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:id="@+id/btn00"
            android:layout_row="8"
            android:layout_column="0"
            android:onClick="btn00"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageButton
            android:background="@null"
            android:layout_width="110dp"
            android:layout_height="145dp"
            android:id="@+id/btn01"
            android:onClick="btn01"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btn02"
            android:layout_toStartOf="@+id/btn02" />
        <ImageButton
            android:background="@null"
            android:layout_width="110dp"
            android:layout_height="145dp"
            android:id="@+id/btn02"
            android:onClick="btn02"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <ImageButton
            android:background="@null"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/btn10"
            android:onClick="btn10"
            android:layout_below="@+id/btn00"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:background="@null"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/btn11"
            android:onClick="btn11"
            android:layout_alignTop="@+id/btn12"
            android:layout_toLeftOf="@+id/btn12"
            android:layout_toStartOf="@+id/btn12" />

        <ImageButton
            android:background="@null"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/btn12"
            android:onClick="btn12"
            android:layout_below="@+id/btn02"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <ImageButton
            android:background="@null"
            android:layout_width="110dp"
            android:layout_height="115dp"
            android:id="@+id/btn20"
            android:onClick="btn20"
            android:layout_below="@+id/btn10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:background="@null"
            android:layout_width="110dp"
            android:layout_height="115dp"
            android:id="@+id/btn21"
            android:onClick="btn21"
            android:layout_below="@+id/btn11"
            android:layout_toLeftOf="@+id/btn22"
            android:layout_toStartOf="@+id/btn22" />

        <ImageButton
            android:background="@null"
            android:layout_width="110dp"
            android:layout_height="115dp"
            android:id="@+id/btn22"
            android:onClick="btn22"
            android:layout_below="@+id/btn12"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="335dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtGanador"
            android:typeface="monospace"
            android:gravity="center"
            android:layout_below="@+id/btn20"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="18dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="397dp"
                android:layout_height="132dp"
                android:layout_gravity="bottom"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageView">


                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/minion_1"
                    android:id="@+id/imageView2"
                    android:layout_gravity="bottom" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text=": 1"
                    android:typeface="monospace"
                    android:id="@+id/textView"
                    android:layout_gravity="center_vertical"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/minion_2"
                    android:id="@+id/imageView3"
                    android:layout_gravity="bottom" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text=": 1"
                    android:typeface="monospace"
                    android:id="@+id/textView2"
                    android:layout_gravity="center_vertical"
                    android:textColor="#fff"
                    android:textSize="20dp" />


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
